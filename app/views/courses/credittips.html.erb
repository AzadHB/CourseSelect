<div style="position:absolute; top:46%; height:77%; left:25%">
  <div id='canvasDiv' style="background_color:'white'"></div>
  </div>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>
    <div class="col-sm-10" style="left:14.5%; width:85.5%; position:absolute">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选课学分提示<button style= "width:12%;height:95%;padding:2px;font-size:13px;color:black;float:right; position:relative" onclick="setChart()">已选课学分图表</button></h3>
          
        </div>
        <table class="table">
        <thead>
          <tr>
            <th>类别</th>
            <th>旁听课程学分</th>
            <th>公共选修课程学分</th>
            <th>专业学位课学分要求</th>
            <th>总学分要求</th>
          </tr>
        </thead>
        <tbody>
          <tr class="active">
            <td>学习要求</td>
            <td>无</td>
            <td>>=2.0学分</td>
            <td>>=12.0学分</td>
            <td>>=30.0学分</td>
          </tr>
          <tr class="success">
            <td>选课情况</td>
             <!--学分提示的方法在course_controller/credittips,不放入视图界面中计算-->
             <td><%= @chosen_PT_all %>学分</td>
            <td><%= @chosen_credit_public %>学分</td>
            <td><%= @chosen_credit_major %>学分</td>
            <td><%= @chosen_credit_all %>学分</td>
          </tr>
          <tr class="danger">
            <td>获取学分</td>
            <!--学分计算的方法同样放在course_controller/credittips,不放入视图界面中计算-->
            <td><%= @obtained_PT_all %>学分</td>
            <td><%= @obtained_credit_pubic %>学分</td>
            <td><%= @obtained_credit_major %>学分</td>
            <td><%= @obtained_credit_all %>学分</td>
          </tr>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

