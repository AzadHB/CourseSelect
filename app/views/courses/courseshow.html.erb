<div class="col-md-offset-1 col-sm-10">
<div class="panel panel-default ">
  <div class="panel-body">
    <h3 class="text-center"><%= @course.name %></h3>
  </div>
</div>
</div>
<div class="panel-group" id="accordion">
<div class="col-md-offset-1 col-sm-10">
<div class="panel panel-default">
  <div class="panel-heading">
    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
    <span class="glyphicon glyphicon-align-justify" style="font-size:20px;color:primary">课程大纲</span>
      </a>
  </div>
  <div id="collapseOne" class="panel-collapse collapse in">
  <div class="panel-body">
    <ul class="nav nav-tabs nav-justified">
    <% if teacher_logged_in?  %>
      <li ><%= link_to "修改课程详细信息" ,edit_course_path(@course), class: 'btn btn-xs btn-info'%></li>
    
    <% else %>
      <li ><%= link_to "课程详细信息" ,courseplan_course_path(@course)%></li>
      <li ><%= link_to "课程目标及要求" ,courseaim_course_path(@course)%></li>
      <li ><%= link_to "课程章节安排" ,coursecontent_course_path(@course)%></li>
      <li ><%= link_to "课程教师信息" ,courseteacher_course_path(@course)%></li>
    <% end %>
     </ul> 
   </div>
         
  </div>
  </div>
</div>
</div>
</div>