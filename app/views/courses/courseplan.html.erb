<div class="col-md-offset-1 col-sm-10">
<div class="panel panel-default ">
  <div class="panel-body">
    <h3 class="text-center"><%= @course.name %></h3>
  </div>
</div>
</div>
<div class="panel-group" id="accordion">
<div class="col-md-offset-1 col-sm-10">
<div class="panel panel-default">
  <div class="panel-heading">
    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
    <span class="glyphicon glyphicon-align-justify" style="font-size:20px;color:primary">课程大纲</span>
      </a>
  </div>
  <div id="collapseOne" class="panel-collapse collapse in">
  <div class="panel-body">
    <ul class="nav nav-tabs nav-justified">
    <% if student_logged_in?  %>
      <li ><%= link_to "课程详细信息" ,courseplan_course_path(@course)%></li>
      <li ><%= link_to "课程目标及要求" ,courseaim_course_path(@course)%></li>
      <li ><%= link_to "课程章节安排" ,coursecontent_course_path(@course)%></li>
      <li ><%= link_to "课程教师信息" ,courseteacher_course_path(@course)%></li>
    <% end %>
     <table class="table ">
         <div class="col-md-offset-1 col-sm-10">
         <h3> <b>课程特点</b></h3>
         
          </div>
           
            <thead>
            <tr>
              <th>课程属性</th>
              <th>属性描述</th>
            </tr>
            </thead>
            <tbody>
             
            
              <tr class="success">
              <td>课程主讲老师</td>
              <td><%= @course.teacher.name %></td>
              </tr>
              <tr class="warning">
              <td>课程授课属性</td>
               <td><%= @course.course_type %></td>
              </tr>
              <tr class="active">
              <td>课程授课方式</td>
              <td><%= @course.course_type %></td>
              </tr>
              <tr class="success">
              <td>课程授课地点</td>
             <td><%= @course.class_room %></td>
              </tr>
              <tr class="warning">
              
              <td>课程上课周数</td>
              <td><%= @course.course_week %></td>
              </tr>
              <tr class="active">
              <td>课程上课时间</td>
              <td><%= @course.course_time %></td>
              </tr>
            </tbody>
          </table>
    <% if teacher_logged_in?  %>
      
          <div class="col-md-offset-1 col-sm-10 ">
          <h3>教学目的及要求</h3><br/>
          <td><%= @course.course_aim %></td>
          </div>
         <div class="col-md-offset-1 col-sm-10 ">
          <h3>教学章节安排</h3><br/>
          <td><%= @course.course_content %></td>
          </div>
          <div class="col-md-offset-1 col-sm-10">
          <h3>课程教师信息</h3><br/>
          <td><%= @course.course_teacher %></td>
          </div>
          <li ><%= link_to "修改课程详细信息" ,edit_course_path(@course), class: 'btn btn-xs btn-info'%></li>
    
     <%end%>
     </ul> 
<br/> <br/>     
   </div>
  </div>
  </div>
</div>
</div>