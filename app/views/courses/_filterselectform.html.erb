<script type= "text/javascript">
  $(function(){ 
    // alert(document.getElementById("keyword_type").value);
    // alert("<%= @apple %>")
    document.getElementById("queryInputWarning").style.display = "none";
     if(document.getElementById("keyword_type").value == 2 || document.getElementById("keyword_type").value == 10 )
      {
          document.getElementById("query_input").style.display = "inline";
          for(var i = 1; i<10; i++)
          {
              if(i != 2)
                  document.getElementById("select_"+i).style.display = "none";
          }
      }
  }); 

  function setType()
  {
    if(document.getElementById("keyword_type").value == 2 || document.getElementById("keyword_type").value == 10 )
    {
      document.getElementById("query_input").style.display = "inline";
      document.getElementById("keyword_select").style.display = "none";
    }
    else if(document.getElementById("keyword_type").value == 1)
     {
       document.getElementById("query_input").style.display = "none";
       document.getElementById("keyword_select").style.display = "inline";
     }
     else
      {
        document.getElementById("query_input").style.display = "none";
      }
  }
  
  function queryCourse()
  {
    if(document.getElementById("keyword_type").value ==2 || document.getElementById("keyword_type").value == 10)
    {
      if(document.getElementById("query_input").value == "")
      {
        document.getElementById("queryInputWarning").style.display = "inline";
        document.getElementById("queryInputWarning").innerHTML = "请输入检索关键词";
      }
      else
        window.location.href = "<%= filter_courses_path %>"+"?queryType="+document.getElementById("keyword_type").value+"&query="+document.getElementById("query_input").value;
    }
    else
      window.location.href = "<%= filter_courses_path %>"+"?queryType=0"+"query="+document.getElementById("query_input").value;
  }
</script>


            